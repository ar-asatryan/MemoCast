            <i class="fa fa-heart"></i> 1
        </a>
    </li>
    <li id="video-nav-viewers" style="display: none;"  data-toggle="tooltip" title="{{ istring locale ru='Это видео сейчас смотрят' en='People watching this movie right now' }}">
        <a class="nav-link" href="#video-viewers">
            <i class="fa fa-eye" aria-hidden="true"></i> 1
        </a>
    </li>
    {{#if recomendations}}
        <li class="nav-item">
            <a class="nav-link" href="#recomendations">
                {{ istring locale ru='Рекомендации' en='Recomended' }}
